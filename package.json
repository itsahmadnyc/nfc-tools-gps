{
  "name": "electron-react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "homepage": "./",
  "description": "NFC Manager Application for Windows and macOS",
  "author": "Muhammad Ahmad",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-mac": "npm run build && npm run rebuild-native && electron-forge make --platform=darwin",
    "make-win": "npm run build && npm run rebuild-native && electron-forge make --platform=win32",
    "make-all": "npm run build && npm run rebuild-native && electron-forge make",
    "electron": "electron .",
    "start": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
    "rebuild-native": "electron-rebuild -f -w nfc-pcsc",
    "postinstall": "npm run rebuild-native"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.68",
    "@tailwindcss/vite": "^4.1.11",
    "concurrently": "^9.2.0",
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.1",
    "lucide-react": "^0.525.0",
    "nfc-pcsc": "^0.8.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11",
    "wait-on": "^8.0.4"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-wix": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "^37.2.3",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4"
  }
}
